# The game starts here.
label start:
    $ coins = 50
    $ inventory = []
    jump shopping
    
init python:

    class Item:
        def __init__(self, name, cost):
            self.name = name
            self.cost = cost
        
    def buy(item):
         global coins
         if coins >= item.cost:
              coins -= item.cost
              inventory.append(item) #put item into inventory
              return True
         else:
             return False

    def has_item(item):
         #global inventory
         if item in inventory:
              return True
         else:
              return False

